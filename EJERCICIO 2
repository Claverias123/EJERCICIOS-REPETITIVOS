import random

numeroS = random.randint(1, 100)
intent = 1
numerointent = (int)(input("Dime un número:\n"))

while numerointent != numeroS and intent<10:
    if numerointent<numeroS:
        print("El número secreto es mayor")
    else:
        print("El número secreto es menor")
    intent += 1
    print("Llevas:", intent, "intentos")
    numerointent = (int)(input("Dime otro número:\n"))

if numerointent == numeroS:
    print("Lo has adivinado en:", intent, "intentos")
else:
    print("Has perdido")
